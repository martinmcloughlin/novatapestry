form
	label Email
	.row
		.col-lg-4
			input.text-input(type='text', placeholder='Placeholder text')

	label Password
	.row
		.col-lg-4
			input.text-input(type='password', placeholder='Placeholder text')

	label Textarea
	.row
		.col-lg-8
			textarea(rows='5', cols='5')

	label Checkboxes/Radio

	label.label-checkbox
		input(type='checkbox')
		| Checkbox control

	label.label-radio
		input(type='radio')
		| Radio control

	label Select field
	.row
		.col-lg-5
			select.js-selecter
				option Option 1
				option Option 2
				option Option 3

	label Multiple Select
	.row
		.col-lg-5
			select.js-selecter(multiple='true')
				option Option 1
				option Option 2
				option Option 3
